# Dawarich Configuration
# Copy this file to .env and fill in your values

# PostgreSQL Configuration (should match your db stack)
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Application Port
DAWARICH_APP_PORT=3000

# Application Hosts (comma-separated domains/IPs that can access the app)
APPLICATION_HOSTS=localhost,dawarich.local,your-domain.com

# Secret Key Base (generate with: openssl rand -hex 64)
SECRET_KEY_BASE=your_secret_key_here_generate_with_openssl_rand_hex_64

# Time Zone
TIME_ZONE=Asia/Tokyo

# Application Protocol (http or https)
APPLICATION_PROTOCOL=http

# Minimum minutes to consider a city visit
MIN_MINUTES_SPENT_IN_CITY=60

# Background Processing
BACKGROUND_PROCESSING_CONCURRENCY=10

# Resource Limits
APP_CPU_LIMIT=0.50
APP_MEMORY_LIMIT=4G

# Prometheus Metrics (optional)
PROMETHEUS_EXPORTER_ENABLED=false
PROMETHEUS_EXPORTER_HOST=0.0.0.0
PROMETHEUS_EXPORTER_PORT=9394
